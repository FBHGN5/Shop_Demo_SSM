<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--为DAO接口提供sql语句方法-->
<mapper namespace="com.shop.dao.HotSaleDao">
    <select id="queryAll" resultType="HotSale">
        select
        *
        from hotsale
      </select>
    <select id="queryById" resultType="HotSale">
        select
        *from
        hotsale
        where id=#{id}

    </select>
    <update id="reduceNumber">
        update
        hotsale
        set
        number = number - #{num}
        where id= #{id}
        and number >= 0
    </update>
    <update id="update">
        update
        hotsale
        set
        price=#{price},
        number=#{number}
        where id= #{id}

    </update>
    <insert id="insert">
      insert ignore into hotsale(username,name,price,img,number,wimg,bimg,buycarimg)
        values(#{username},#{name},#{price},#{img},#{number},#{wimg},#{bimg},#{buycarimg})

    </insert>
    <delete id="deleteById">
       delete from hotsale
       where id=#{id}
    </delete>
